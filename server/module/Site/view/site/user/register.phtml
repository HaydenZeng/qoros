        <a class="submit-01" onclick="submitMobile()">下一步</a>
    </div>
</div>

<script>
    $(function() {
        $('.input-01').onkeydown(function(){
            $('#err_tip').hide();
        })
    });

    function submitMobile(){
        var mobile = $(".input-01").val();
        var openid = $("#openid").val();
        $.ajax({
            type: 'POST',
            url: '/user/register',
            data: {mobile:mobile,openid:openid},
            dataType: "json",
            beforeSend: function(){
            },
            complete: function(){
            },
            success: function (data) {
                if (data.status > 0) {
                    $('#err_tip').show();
                } else {
                    window.location.href = '/user/completeInfo';
                }
            }
        });
    }
</script>